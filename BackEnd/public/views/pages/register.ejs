<%- include('../partials/header.ejs', { title: 'Register - Tiendita', showNavbar: false }); -%>

<main>
  <section class="register" style="background-color: #2e3338;">
    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh; width: 100%;">
      <div class="text-white bg-dark m-0 p-2 container d-flex flex-column justify-content-center align-items-center" style="width: 98vw; height: 100vh; padding: 5rem 3rem; border-radius: 2rem;">
        <div class="text-center m-0 p-0 text-primary">
          <h2>Register</h2>
        </div>
        <div class="mb-4">
          <form action="/api/usuario/signup" method="POST" >
            <div class="row">
              <div class="col-md-6 ">
                <label class="form-label" for="userName">Nombre de Usuario</label>
                <input class="form-control" type="text" id="userName" name="userName">
              </div>
              <div class="col-md-6 ">
                <label class="form-label" for="email">Email</label>
                <input class="form-control" type="email" id="email" name="email">
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 ">
                <label class="form-label" for="age">Edad</label>
                <input class="form-control" type="number" id="age" name="age">
              </div>
              <div class="col-md-6 ">
                <label class="form-label" for="phone">Teléfono</label>
                <input class="form-control" type="number" id="phone" name="phone">
              </div>
            </div>
            <div class="row">
              <div class=" ">
                <label class="form-label" for="image">Avatar</label>
                <input class="form-control" type="file" name="file">
              </div>
            </div>
            <div class="">
              <label class="form-label" for="password">Contraseña</label>
              <input class="form-control" type="password" id="password" name="password">
            </div>
            <button class="btn btn-primary w-100 mt-2">Register</button>
          </form>
        </div>
      </div>
    </div>
  </section>
</main>

<%- include('../partials/footer.ejs', { showFooter: false }); -%>
