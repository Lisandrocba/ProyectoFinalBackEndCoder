<%- include('../partials/header.ejs', { title: 'Login - Tiendita', showNavbar: false }); -%>

<main>
  <section class="login p-4" style="background-color: #2e3338;">
    <div class="container d-flex justify-content-center align-items-center" >
      <div class="text-white bg-dark " style="width: 60vw; height: 90vh; border-radius: 2rem;display: flex; flex-direction: column; justify-content: center; align-items: center;">
        <div class="text-center">
          <h2>Login</h2>
        </div>
        <div class="mb-4">
          <form action="/api/usuario/login" method="POST">
            <div class="mb-3">
              <label class="form-label" for="text">User Name</label>
              <input class="form-control" type="userName" name="userName" id="userName" required>
            </div>
            <div class="mb-4">
              <label class="form-label" for="password">Contraseña</label>
              <input class="form-control" type="password" name="password" id="password" required>
            </div>
            <button class="btn btn-primary w-100">Login</button>
          </form>
        </div>
        <span style="font-size: .85rem;">¿Todavía no estas registrado? <a href="register">Hacelo aquí!</a></span>
      </div>
    </div>
  </section>
</main>

